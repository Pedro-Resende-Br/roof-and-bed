<div class="container mt-2">
  <ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
      <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Your bookings</a>
    </li>
    <li class="nav-item" role="presentation">
      <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Your flats</a>
    </li>
  </ul>
  <div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active my-bookings" id="home" role="tabpanel" aria-labelledby="home-tab">
      <%= render 'components/card-booking' %>
      <%= link_to "Book your new adventure!", root_path(@flat), class: "btn btn-flat" %>
    </div>
    <div class="tab-pane fade my-flats" id="profile" role="tabpanel" aria-labelledby="profile-tab">
      <%= render 'components/card-flat' %>
      <%= link_to "Add a new flat now!", new_flat_path(@flat), class: "btn btn-flat" %>
    </div>
  </div>
    <hr>
    <div class="go_back"><%= link_to "", root_path, class: "fas fa-backward" %></div>
</div>
