<div class="container">  
  <hr>
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1600488999129-e49662f4020c?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1567&q=80">
  </div>
  <hr>
  <div class="details">
    <div class="boxdetails">
      <div class="info">
        <h3><%=@flat.title%></h3>
        <p><%=@flat.address%></p>
        <p><%=@flat.city%></p>
      </div>
      <div class="description">
        <p><%=@flat.description%></p>
      </div>
    </div>
    <div class='box'>
      <div class="price_and_dates">
        <p> <i class="fas fa-dollar-sign"></i> <%=@flat.price%></p>
        <div class="booking_button">
          <%= link_to "Book Now!", new_flat_booking_path(@flat), class: "btn btn-primary btn-lg"%>
        </div>
      </div>      
    </div>     
  </div>
  <hr>
  <% if policy(@flat).edit? %>
  
  <%= link_to "", edit_flat_path(@flat), class: "fas fa-user-edit"%>
  <% end %>
  <% if policy(@flat).destroy? %>
    <%= link_to "", flat_path, method: :delete, class: "fas fa-trash-alt"%>
  <% end %>
  <%= link_to "", root_path, class: "fas fa-backward"%>
</div>
