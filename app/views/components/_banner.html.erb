<div class="banner">
  <div class="container">
    <h1><span>Roof & Bed offers you the best flats!</span></h1>
  </div>

  <div class="container w-50">
    <%= simple_form_for :search, url: root_path, method: :get do |f| %>
      <div class="search-form-control form-group">
        <%= text_field_tag :query, params[:query], class: "form-control string required", placeholder: "Find a flat" %>
        <%= submit_tag "Book now", class: "btn btn-flat" %>
      </div>
    <% end %>
  </div>
</div>
